<div class="form-group mb-3">
  <label for="logoUrl">Logo Url</label>
  <input 
    class="form-control" 
    type="text" 
    name="logoUrl" 
    value="<%= cohort ? cohort.logoUrl : '' %>"
    placeholder="e.g. https://www.example.com/some.png"
  ></input>
</div>
<div class="form-group mb-3">
  <label for="name">Name</label>
  <input 
    class="form-control" 
    type="text" 
    name="name" 
    value="<%= cohort ? cohort.name : '' %>"
    placeholder="Cooltown Cohort"
  ></input>
</div>
<div class="form-group mb-3">
  <label for="members">Members</label>
  <input 
    class="form-control" 
    type="text" 
    name="members" 
    value="<%= cohort ? cohort.members : '' %>"
    placeholder="John Smith, Jane Doe, Joe Average"
  ></input>
</div>

<input type="submit" value="<%= cohort ? "Update" : "Create" %>" class="btn btn-primary"></div>